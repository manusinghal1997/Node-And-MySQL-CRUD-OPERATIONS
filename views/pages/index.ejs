		<% include ../partials/header %>		
		<div class="">
			<br>
			<div class="col s12">
				<h1 align="center"><a href="/event/add" class="btn btn-success tn-lg"> Add a new event</a></h1>
			</div>
		</div>	
		<br>

	<div class="=">
		<div class="col s12">
			<% if(items.length>0){ %>
				<table class="table">
					<thead>
						<tr>
							<th style="width:1%; text-align:center;">ID</th>
							<th style="width:49%">Name</th>
							<th style="width:20%">Description</th>
							<th style="width:10%">Location</th>
							<th colspan="2" style="width:20%; text-align:center;">Actions</th>
						</tr>
					</thead>
					<tbody>
						<% items.forEach(function(item, index){ %>
						<tr>
						
							<td><%= index+1 %></td>
							<td><%= item.name%></td>
							<td><%= item.description%></td>
							<td><%= item.location%></td>
							<td><a href="/event/edit/<%= item.id %>" class="btn btn-success">Edit</a>
							<a href="/event/delete/<%= item.id %>" class="btn btn-danger">Delete</a>
							</td>
						</tr>
						<% }); %>
					</tbody>
				</table>
				<% }else { %>
					<p><strong>There are no records available</strong></p>
					<% } %>
				</div>
			</div>
		
		<% include ../partials/footer %>
